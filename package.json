{
  "name": "jummechu-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run local-mockoon & pnpm run local-next",
    "build": "NODE_ENV=prod pnpm run copy-env && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "eslint:fix": "eslint --cache .",
    "format": "prettier --cache --write .",
    "prepare": "husky install",
    "copy-env": "cp .config/env/.env.${DOT_ENV} .env",
    "local-next": "DOT_ENV=local pnpm run copy-env && next dev",
    "local-proxy": "node .config/local-proxy.js",
    "local-mockoon": "mockoon-cli start --data mock/config.json"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.7",
    "babel-plugin-react-compiler": "19.0.0-beta-df7b47d-20241124",
    "classnames": "^2.3.2",
    "eslint-config-prettier": "^9.1.0",
    "lodash": "^4.17.21",
    "next": "^15.0.3",
    "pino": "^9.3.2",
    "pnpm": "^9.15.0",
    "prettier": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recoil": "^0.7.7",
    "sass": "^1.82.0",
    "sass-loader": "^16.0.4",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@mockoon/cli": "^9.1.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "volta": {
    "node": "20.10.0",
    "pnpm": "8.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bash -c tsc --noEmit --module esnext --target esnext",
      "eslint --fix",
      "prettier --write"
    ]
  }
}
